<h2>Latest Users Configuration</h2>
<% @setup = LatestUsersSetup.first rescue nil%>
<%= form_tag("/latest-users/change") do %>
    <dl>
      <label style="margin-left:5px">Number of users on page:</label>
      <input type="text" maxsize="2" name="count" value="<%= @setup.max_count %>"/>
    </dl><dl>
  <label style="margin-left:5px">Which side do you want the plugin on?</label>
  <select name="side">
    <option value="left" <% if @setup.side == 'left' %>selected<% end %>>left</option>
    <option value="right" <% if @setup.side == 'right' %>selected<% end %>>right</option>
  </select>
</dl>
    <dl>
      <input type="submit" value="Save"/>
    </dl>
<% end %>